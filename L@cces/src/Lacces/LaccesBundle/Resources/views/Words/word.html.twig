{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/word.css') }}">
{% endblock %}

{% block body %}

    <main>
        <div class="container">
            <div class="row">
                <div class="col s6 center wordTranslate">
                    <p>
                        <strong>{{ word.word }}</strong>
                    </p>
                    <p>
                        {{ word.word }}
                    </p>
                </div>
                <div class="col s2">
                    <a href="#" data-target="search-on">
                        <i class="material-icons">search</i>
                    </a>
                </div>

                {{ render(controller("LaccesBundle:Default:searchBarre")) }}

            </div>

            <div class="col s12 center-align">
                <!--
                <object width="425" height="344" data="{{ word.videoLink }}"></object>

                <embed src="{{ word.videoLink }}" allowfullscreen="true" width="425" height="344">

                <iframe width="425" height="344" src="{{ word.videoLink }}" frameborder="0" allowfullscreen></iframe>
                -->
                <iframe width="100%" height="" src="{{ word.videoLink }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen controls></iframe>

            </div>

            <div class="col s12 center-align">
                <iframe width="560" height="315" src="{{ word.videoLink }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
    </main>
    <script>
        $(document).ready(function () {
            $('.sidenav').sidenav();
        });

    </script>
{% endblock %}