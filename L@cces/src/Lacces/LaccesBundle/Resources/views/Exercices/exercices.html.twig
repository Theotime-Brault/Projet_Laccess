        </main>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(".tabs").tabs({
            swipeable: true,
        });
    </script>
    <script src="{{ asset('js/js_for_views/exercice.js') }}"></script>
{% endblock %}