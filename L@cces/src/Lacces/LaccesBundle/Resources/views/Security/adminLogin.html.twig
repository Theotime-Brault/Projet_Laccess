{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block title %}
    Connexion administration
{% endblock %}

{% block body %}

    <div class="container-body">
        <main>
            <div class="container">
                <div class="container-main-flex">
                    {% if error %}
                        <div>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    <div class="row center">
                        <div class="col s12 m8 offset-m2">
                            <form action="{{ path('login_check') }}" method="post">
                                <label for="username">Identifiant</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Entrer votre identifiant"/>

                                <label for="password">Mot de passe</label>
                                <input type="password" id="password" name="_password" placeholder="Entrer votre mot de passe"/>

                                <button class="btn waves-effect background-color-orange-lacces" type="submit">Se connecter</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}