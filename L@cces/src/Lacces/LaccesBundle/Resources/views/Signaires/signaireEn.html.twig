{% extends 'base.html.twig' %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/css_for_views/signaireEn.css') }}">

{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <ul class="collapsible collapsible-accordion-2">
                {% for letter in 'a'..'z' %}
                    <li class="bold">
                        <a class="collapsible-header waves-effect" id="lettreMaj">{{ letter|upper }}<i class="material-icons right" id="material-icons_arrow_drop_down_2">arrow_drop_down</i></a>
                        <div class="collapsible-body">
                            <ul>
                                {% for w in wordEn %}
                                    {% if w.word|first == letter %}
                                        <li class="white">
                                            <a class="waves-effect" id="wordHover" href="../word/{{ w.word }}">- {{ w.word }}</a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>

{% endblock %}