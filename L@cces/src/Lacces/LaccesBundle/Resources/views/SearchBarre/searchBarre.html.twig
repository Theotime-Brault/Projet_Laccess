<form method="POST">
    <div id="search-on">
        <div class="input-field ui-widget">
            <input name="search-barre" class="search" id="search-barre" autocomplete="off" placeholder="Rechercher un mot" />
            <a id="btnSearch" class="btn">
                <i class="material-icons orange-text">search</i>
            </a>
        </div>
    </div>
    <div id="result"></div>
</form>

<script>

  $('#btnSearch').click(function (){
     var  s = $('#search-barre').val();
      var l;
      if($("#btnFr").is(":checked")) {
          l = "fr";
      }else if($("#btnEn").is(":checked")) {
          l = "en";
      }else{
          l = "";
      }

     if(s != "" && !l){
         $('#btnSearch').attr('href', "/word/"+l+"/"+s);
     }else{
         $('#btnSearch').attr('href', "/");
     }
  });

  $('#search-barre').keyup(function () {
      var word = $('#search-barre').val();
      var l;
      if($("#btnFr").is(":checked")) {
          l = "fr";
      }else if($("#btnEn").is(":checked")) {
          l = "en";
      }else{
          l = "";
      }

      if(word && l){
          $.ajax({
              cache: false,
              data: {'l':l, 'word':word},
              url:  "{{ path('auto_complete') }}",
              type: 'POST',
              dataType: "json",
              success: function (response) {
                  result(response);
              },
              error: function (response) {
              }
          })

          function result(response){
              $('#result').html("");
              for (var i = 0; i < response['words'].length; i++) {
                  $('#result').append(
                      "<a href=\"#\" class=\"\">" +
                      "<div class=\"card\">" +
                      "<div class=\"card-content\" id=\"\">" + response['words'][i]['word'] + "</div>" +
                      "</div>" +
                      "</a>"
                  );
              }
          }
      }
  })

  $('#result>a').click(function(){
      var s = $(this).text();
      console.log($(this).text());
      $('#search-barre').val(s);
  })
</script>
