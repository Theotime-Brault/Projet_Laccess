{% extends 'base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/index.css') }}">
{% endblock %}

{% block body %}

<main>
    <div class="container">
        <section>
            <div class="row b-flag">
                <div class="col s6">
                    <img class="flag" src="{{ asset('pictures/logo_mains_fr_test.png') }}"/>
                </div>
                <div class="col s6">
                    <img class="flag" src="{{ asset('pictures/logo_mains_fr_test.png') }}"/>
                </div>
            </div>
<!--////////////////////////////////////////////////////////////TEST/////////////////////////////////////////-->
            <div>
              <label>
                <input type="radio" value="1" id="test1" name="langue" checked/>
                <span>fr</span>
              </label>
            </div>
            <div>
              <label>
                <input type="radio" value="2" name="langue" id="test2"/>
                <span>en</span>
              </label>
            </div>
<!--////////////////////////////////////////////////////////////TEST/////////////////////////////////////////-->
        </section>
        <section>
            <div class="row">
                <div class="col s1 m2 x2 xl2"></div>
                <div class="col s10 m8 x8 xl8">
                    {{ render(controller("LaccesBundle:Default:searchBarre")) }}
                </div>
                <div class="col s1 m2 x2 xl2"></div>
            </div>
        </section>
        <section>
            <div class="row">
                <p class="center">
                    Le français anglais signé en vidéo et en face à face
                </p>
            </div>
        </section>
    </div>
<footer>
  <div class="container footer">
    <div class="row">
      <div class="col s4 m4">
        FAQ
      </div>
      <div class="col s4 m4">
        Mentions légales
      </div>
      <div class="col s4 m4">
        Contact
      </div>
    </div>
  </div>
</footer>
{% endblock %}

{% block javascripts %}
$(function(){
  var tabFr = [
  {% for w in wordFr %}
    "{{ w.word }}",
  {% endfor %}
  ];
  var tabEn = [
  {% for w in wordEn %}
    "{{ w.word }}",
  {% endfor %}
  ];
  $("#search-barre").keyup(function() {
    if($("#test1").is(':checked')){
      $("#search-barre").autocomplete({
        source: tabFr
      });
    }

    if($("#test2").is(':checked')){
      $("#search-barre").autocomplete({
        source: tabEn
      });
    }
  });
});
{% endblock %}
