{% extends '@Lacces/Administration/administration.html.twig' %}

{% block title %}Ajouter un admin{% endblock %}

{% block body %}

    <div class="container-body">

        {% block message_flash %}
            {% for msg in app.session.flashBag.get('info') %}
                <div class="message-flash background-color-orange-lacces">
                    <p>{{ msg }}</p>
                </div>
            {% endfor %}
        {% endblock %}


        <main>
            <div class="container">
                <div class="container-main-flex">
                    <section>
                        <h2 class="center">Ajouter un administrateur</h2>
                        {{ include('@Lacces/formAddAdmin.html.twig') }}
                    </section>
                </div>
            </div>
        </main>
    </div>


{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/js_for_views/ajoutAdmin.js') }}"></script>
{% endblock %}